<!DOCTYPE html>
<html lang="en">
  <%- include ../partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include ../partials/header %>
        <%- include ../partials/sidebar %>
      </nav>
      <!-- End: Navigation -->

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%= title %></h1>

              <p align="right"><a href="/students/add" class="btn btn-outline btn-default"><i class="fa fa-file-o"></i> New</a></p>

              <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Full Name</th>
                      <th>Email</th>
                      <th>Actions</th>
                      <th>Options</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < dataStudents.length; i++) { %>
                      <tr class="odd gradeX">
                        <td><%= i + 1 %></td>
                        <td><%= dataStudents[i].first_name %></td>
                        <td><%= dataStudents[i].last_name %></td>
                        <td><%= dataStudents[i].full_name %></td>
                        <td><%= dataStudents[i].email %></td>
                        <td class="text-center"><a href="/students/<%= dataStudents[i].id %>/addsubject">Add Subject</a></td>
                        <td class="text-center">
                          <a href="/students/edit/<%= dataStudents[i].id %>" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></a>
                          <a href="/students/delete/<%= dataStudents[i].id %>" class="btn btn-danger btn-circle" onclick="return confirm('Are you sure want to delete ?')"><i class="fa fa-remove"></i></a>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include ../partials/jsfooter %>
  </body>
</html>