<!DOCTYPE html>
<html lang="en">
  <%- include ../partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include ../partials/header %>
        <%- include ../partials/sidebar %>
      </nav>
      <!-- End: Navigation -->

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%= title %></h1>
              <!-- Alert Message -->
              <% if (errMessage) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= errMessage %>
              </div>
              <% } %>

              <div class="row">
                <div class="col-md-12">
                  <form action="/students/add" method="post" role="form">
                    <div class="form-group">
                      <label>First Name</label>
                      <input name="first_name" value="<%= dataStudent.first_name %>" type="text" placeholder="First Name" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Last Name</label>
                      <input name="last_name" value="<%= dataStudent.last_name %>" type="text" placeholder="Last Name" class="form-control">
                    </div>
                    <div class="form-group">
                      <label>Email</label>
                      <input name="email" value="<%= dataStudent.email %>" type="email" placeholder="Your Email" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/students" class="btn btn-default">Cancel</a>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include ../partials/jsfooter %>
  </body>
</html>